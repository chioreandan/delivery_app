%p#notice= notice
.container
  .product-wrap
    %p
      %b Name:
      = @product.name
    %p
      %b Category:
      = @product.category
    %p
      %b Price:
      = @product.price
    - if @product.image.attached?
      %p
        = cl_image_tag(@product.image.key, width: 200, height: 200, crop: "scale")
    %button.btn.btn-primary
      Buy now
    %br
    = link_to 'Edit', edit_product_path(@product)
    \|
    = link_to 'Back', products_path
